<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/flAdvertDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="right|top"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <com.androidex.imageloader.fresco.FrescoImageView
                android:id="@+id/aivAdvert"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:actualImageScaleType="centerCrop" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rlPigDiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"></RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="54dp"
            android:text="超\n划\n算\n的\n购\n物\n神\n器"
            android:textColor="#313134"
            android:textSize="20dp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.5dp"
        android:layout_marginBottom="3dp"
        android:drawableTop="@mipmap/ic_launcher"
        android:drawablePadding="13dp"
        android:gravity="center"
        android:text="今日精选"
        android:textColor="#313134"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.5dp"
        android:text="更多优惠，尽在今日精选"
        android:textColor="#999999"
        android:gravity="center"
        android:textSize="12dp"
        android:textStyle="bold" />

</LinearLayout>